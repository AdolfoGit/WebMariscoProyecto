{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true  // Agrega soporte para Node.js para evitar el error de 'module' is not defined
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "sourceType": "module"  // Permite el uso de 'import' y 'export' como m√≥dulos ECMAScript
    },
    "rules": {
      "no-restricted-globals": [
        "error",
        {
          "name": "self",
          "message": "El uso de 'self' es permitido en service workers."
        }
      ],
      "no-undef": "off"  // Desactiva el error 'module is not defined'
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
  